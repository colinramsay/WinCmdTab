<Window x:Class="WinCmdTab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCmdTab"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        SizeToContent="WidthAndHeight"  WindowStyle="None" 
   
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:Processes x:Key="MyFriends"/>
        <Style TargetType="ListBoxItem">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="10"/>
      
        </Style>

        <Style TargetType="ListBox" >
        <Setter Property="KeyboardNavigation.TabNavigation" Value="Continue" />
    </Style>
       

    </Window.Resources>

    <StackPanel>
        <ListBox Width="200" IsSynchronizedWithCurrentItem="True" Name="lbTodoList"
             ItemsSource="{Binding Source={StaticResource MyFriends}}"  SelectionChanged="lbTodoList_SelectionChanged"/>
    </StackPanel>
</Window>
